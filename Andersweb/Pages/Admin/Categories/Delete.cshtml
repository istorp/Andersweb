@page
@model Andersweb.Pages.Admin.Categories.DeleteModel
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" disabled class=form-control />

        </div>
        <button type="submit" class="btn btn-danger" style="width:200px;">Delete</button>
        <a asp-page="index" class="btn btn-secondary" style="width:150px">Back to list</a>
        <a asp-page="../index" class="btn btn-success" style="width:150px">Back to Home</a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
